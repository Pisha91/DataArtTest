@model DataArtATM.ViewModels.ValidatePinCodeViewModel

@{
    ViewBag.Title = "ValidatePinCode";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    @using (Html.BeginForm("ValidatePinCode", "Card", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.CardNumber)
        <div class="form-group">
            @Html.LabelFor(x => x.PinCode, new { @class = "col-sm-2 control-label input-lg" })
            <div class="col-sm-10">
                @Html.PasswordFor(x => x.PinCode, new { @class = "form-control input-lg", @readonly = "readonly" })
                @Html.ValidationMessageFor(x => x.PinCode)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
                @{ Html.RenderPartial("Partial/KeyboardPartial"); }
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
                <a href="@Url.Action("ValidateCard")" class="btn btn-danger exit-button">Exit</a>
            </div>
        </div>
    }
</div>
@section scripts
{
    <script type="text/javascript">
    $(function () {
        setKeyBoard('#PinCode', 4);
    })
</script>
}